{
    "openapi": "3.0.3",
    "info": {
        "title": "Amigo Oculto API",
        "description": "Api para criação, gerenciamento e controle de amigo oculto",
        "version": "1.0.1"
    },
    "servers": [
        {
            "url": "http://localhost:3333/v1",
            "description": "Development server"
        },
        {
            "url": "http://api.mumuz.in/v1",
            "description": "Production server"
        }
    ],
    "paths": {
        "/user": {
            "post": {
                "description": "Create and return an user",
                "tags": ["user"],
                "summary": "Create user",
                "operationId": "createUser",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateUserRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created User",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/sessions": {
            "post": {
                "description": "Create an auth token by email and password",
                "summary": "Create an auth token",
                "tags": ["session"],
                "operationId": "createToken",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateSessionRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SessionResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/password/forgot": {
            "post": {
                "description": "Create a token for auth user to reset your password",
                "summary": "Create a token form reset password",
                "tags": ["password"],
                "operationId": "createResetPasswordToken",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/EmailHeader"
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Created reset password token"
                    },
                    "404": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ExceptionBase"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/password/reset": {
            "post": {
                "description": "Reset password for an user",
                "summary": "Reset password",
                "tags": ["password"],
                "operationId": "resetPassword",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ResetPasswordRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "204": {
                        "description": "Reset Password"
                    },
                    "404": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ExceptionBase"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/group": {
            "post": {
                "description": "Create a group for secret santa",
                "summary": "Create a group",
                "tags": ["group"],
                "operationId": "createGroup",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateGroupRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Group created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GroupResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ExceptionBase"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "description": "List gruops for the user logged",
                "summary": "List groups",
                "tags": ["group"],
                "operationId": "getUserGroups",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "User groups",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/GroupResponse"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ExceptionBase"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/group/{id}": {
            "put": {
                "description": "Update a group for secret santa",
                "summary": "Update a group",
                "tags": ["group"],
                "operationId": "updateGroup",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/GroupIdParam"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateGroupRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Group updated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GroupResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ExceptionBase"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/group/{id}/invite": {
            "post": {
                "description": "Invite another user for my secret santa",
                "summary": "Invite another user",
                "operationId": "inviteUser",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "parameters": [
                    {
                        "$ref": "#/components/parameters/GroupIdParam"
                    },
                    {
                        "$ref": "#/components/parameters/EmailHeader"
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Reset Password"
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ExceptionBase"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ExceptionBase"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "parameters": {
            "EmailHeader": {
                "name": "email",
                "in": "header",
                "description": "User email",
                "example": "foo.bar@example.com",
                "required": true,
                "schema": {
                    "type": "string",
                    "format": "email",
                    "example": "foo.bar@example.com"
                }
            },
            "GroupIdParam": {
                "name": "id",
                "in": "path",
                "description": "Id for specific group",
                "required": true,
                "schema": {
                    "type": "string",
                    "format": "uuid"
                }
            }
        },
        "schemas": {
            "CreateUserRequest": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Foo Bar"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "foo.bar@example.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "#%P&pM4z"
                    }
                },
                "required": [
                    "name",
                    "email",
                    "password"
                ]
            },
            "UserResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "required": [
                    "id",
                    "name",
                    "email",
                    "created_at"
                ]
            },
            "CreateSessionRequest": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "foo.bar@example.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "#%P&pM4z"
                    }
                },
                "required": [
                    "email",
                    "password"
                ]
            },
            "SessionResponse": {
                "type": "object",
                "properties": {
                    "user": {
                        "$ref": "#/components/schemas/UserResponse"
                    },
                    "token": {
                        "type": "string"
                    }
                },
                "required": [
                    "user",
                    "token"
                ]
            },
            "ResetPasswordRequest": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "password_confirmation": {
                        "type": "string",
                        "example": "#%P&pM4z"
                    }
                },
                "required": [
                    "token",
                    "password",
                    "passwordConfirmation"
                ]
            },
            "CreateGroupRequest": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Secret Santa"
                    },
                    "event_date": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "gift_value": {
                        "type": "number",
                        "example": "50.00"
                    },
                    "cep": {
                        "type": "integer",
                        "example": "303030300"
                    },
                    "street": {
                        "type": "string",
                        "example": "Street"
                    },
                    "neighborhood": {
                        "type": "string",
                        "example": "Neighborhood"
                    },
                    "city": {
                        "type": "string",
                        "example": "City"
                    },
                    "state": {
                        "type": "string",
                        "example": "State"
                    },
                    "complement": {
                        "type": "string",
                        "example": "B1"
                    },
                    "description": {
                        "type": "string",
                        "example": "Secret Santa"
                    }
                },
                "required": [
                    "name"
                ]
            },
            "GroupResponse": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "format": "uuid" 
                    },
                    "name": {
                        "type": "string"
                    },
                    "event_date": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "gift_value": {
                        "type": "number"
                    },
                    "cep": {
                        "type": "integer"
                    },
                    "street": {
                        "type": "string"
                    },
                    "neighborhood": {
                        "type": "string"
                    },
                    "city": {
                        "type": "string"
                    },
                    "state": {
                        "type": "string"
                    },
                    "complement": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "created_by": {
                        "type": "string",
                        "format": "uuid" 
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "required": [
                    "id",
                    "name",
                    "created_at"
                ]
            },
            "InviteUserRequest": {
                "type": "object",
                "properties": {
                    "user_id": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "group_id": {
                        "type": "string",
                        "format": "uuid"
                    }
                },
                "required": [
                    "user_id",
                    "group_id"
                ]
            },
            "ExceptionBase": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "example": "domain"
                    },
                    "title": {
                        "type": "string",
                        "example": "Title of exception"
                    },
                    "status": {
                        "type": "number",
                        "example": "404"
                    },
                    "detail": {
                        "type": "string",
                        "example": "Detail of exception"
                    },
                    "instance": {
                        "type": "string",
                        "example": "Instance of error"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
              "type": "http",
              "scheme": "bearer",
              "bearerFormat": "JWT"
            }
        }
    }
}