{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es5",
    "module": "commonjs",
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "paths": {
      "@domain/*": ["src/domain/*"],
      "@config/*": ["src/config/*"],
      "@shared/*": ["src/shared/*"],
      "@constants/*": ["src/constants/*"]
    },
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}